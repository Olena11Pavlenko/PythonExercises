def sum_odd_and_even(lst):
    list_even=[]
    list_odd=[]
    for i in lst:
        if i%2==0:
            list_even.append(i)
        else:
            list_odd.append(i)
    return [sum(list_even),sum(list_odd)]

list_n = [1, 3, 4, 7, 8]
print(sum_odd_and_even(list_n))